{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ES2022",
    "module": "es6",
    "lib": ["es2017", "dom"],
    "useDefineForClassFields": true,
    "allowJs": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "references": [],
  "exclude": ["node_modules"]
}
